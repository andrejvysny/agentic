{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-antigravity-auth@1.0.0"],

  "model": "opencode/claude-sonnet-4-5",
  "small_model": "opencode/claude-haiku-4-5",
  "default_agent": "orchestrator",

  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true,
      "timeout": 10000
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true,
      "timeout": 10000
    }
  },

  "permission": {
    "bash": {
      "*": "ask",
      "git status": "allow",
      "git status *": "allow",
      "git log *": "allow",
      "git diff *": "allow",
      "git branch *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "wc *": "allow",
      "npm test *": "allow",
      "npm run test *": "allow",
      "npm run lint *": "allow",
      "npm run build *": "allow",
      "yarn test *": "allow",
      "pnpm test *": "allow",
      "pytest *": "allow",
      "go test *": "allow",
      "cargo test *": "allow"
    }
  },

  "agent": {
    "orchestrator": {
      "description": "Central coordinator managing multi-agent workflows. Routes tasks, handles approvals, aggregates outputs.",
      "model": "opencode/claude-sonnet-4-5",
      "mode": "primary",
      "temperature": 0.2,
      "maxSteps": 50,
      "prompt": "{file:prompts/orchestrator.md}",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true,
        "question": true
      },
      "permission": {
        "task": {
          "*": "allow"
        }
      }
    },

    "classifier": {
      "description": "Task complexity classifier. Routes requests to Quick Path (SIMPLE) or Deep Path (COMPLEX).",
      "model": "opencode/claude-haiku-4-5",
      "mode": "subagent",
      "temperature": 0.1,
      "maxSteps": 5,
      "prompt": "{file:prompts/classifier.md}",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "grep": true,
        "glob": true,
        "list": true
      },
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },

    "simple-planner": {
      "description": "Quick Path planner for simple tasks. Creates 3-5 step plans for 1-3 files, <50 lines.",
      "model": "opencode/claude-haiku-4-5",
      "mode": "subagent",
      "temperature": 0.2,
      "maxSteps": 10,
      "prompt": "{file:prompts/simple-planner.md}",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "grep": true,
        "glob": true,
        "list": true
      },
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },

    "fast-implementer": {
      "description": "Quick Path implementer. Executes simple plans with basic self-review.",
      "model": "opencode/gpt-5.1-codex-mini",
      "mode": "subagent",
      "temperature": 0.3,
      "maxSteps": 10,
      "prompt": "{file:prompts/fast-implementer.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": false
      },
      "permission": {
        "bash": "ask",
        "task": {
          "*": "deny"
        }
      }
    },

    "strategic-planner": {
      "description": "Deep Path planner for complex tasks. Creates 5-20 step plans, spawns Researcher/Architect as needed.",
      "model": "opencode/claude-opus-4-5",
      "mode": "subagent",
      "temperature": 0.2,
      "maxSteps": 30,
      "reasoningEffort": "high",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 16000
      },
      "prompt": "{file:prompts/strategic-planner.md}",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true,
        "question": true
      },
      "permission": {
        "task": {
          "*": "deny",
          "researcher": "allow",
          "architect": "allow",
          "testing-specialist": "allow"
        }
      }
    },

    "researcher": {
      "description": "Information gatherer. Web search, MCP integrations, documentation lookup, best practices.",
      "model": "opencode/gemini-3-flash",
      "mode": "subagent",
      "temperature": 0.5,
      "maxSteps": 20,
      "prompt": "{file:prompts/researcher.md}",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true,
        "websearch": true,
        "grep": true,
        "glob": true,
        "list": true,
        "context7_*": true,
        "gh_grep_*": true
      },
      "permission": {
        "webfetch": "allow",
        "task": {
          "*": "deny"
        }
      }
    },

    "architect": {
      "description": "Structural/design decision maker. Evaluates trade-offs, recommends architecture approaches.",
      "model": "opencode/claude-opus-4-5",
      "mode": "subagent",
      "temperature": 0.2,
      "maxSteps": 30,
      "reasoningEffort": "high",
      "textVerbosity": "low",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 16000
      },
      "prompt": "{file:prompts/architect.md}",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "grep": true,
        "glob": true,
        "list": true
      },
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },

    "plan-reviewer": {
      "description": "Quality gate for plans. Scores plans 0-100, validates completeness/feasibility before human approval.",
      "model": "opencode/claude-sonnet-4-5",
      "mode": "subagent",
      "temperature": 0.2,
      "maxSteps": 15,
      "prompt": "{file:prompts/plan-reviewer.md}",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "grep": true,
        "glob": true,
        "list": true
      },
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },

    "senior-implementer": {
      "description": "Deep Path implementer for backend/full-stack. Production-quality code with tests and error handling.",
      "model": "opencode/gpt-5.2-codex",
      "mode": "subagent",
      "temperature": 0.3,
      "maxSteps": 30,
      "prompt": "{file:prompts/senior-implementer.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": false,
        "todowrite": true,
        "todoread": true,
        "lsp": true
      },
      "permission": {
        "bash": "ask",
        "task": {
          "*": "deny"
        }
      }
    },

    "frontend-specialist": {
      "description": "Frontend/UI-UX implementer. React/Vue/Angular/Svelte, accessibility, responsive design, performance.",
      "model": "opencode/gpt-5.1-codex",
      "mode": "subagent",
      "temperature": 0.3,
      "maxSteps": 30,
      "prompt": "{file:prompts/frontend-ui-ux-specialist.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": false,
        "todowrite": true,
        "todoread": true,
        "lsp": true
      },
      "permission": {
        "bash": "ask",
        "task": {
          "*": "deny"
        }
      }
    },

    "document-writer": {
      "description": "Documentation creator. API docs, READMEs, ADRs, changelogs, code comments. Runs parallel with implementation.",
      "model": "opencode/gemini-3-flash",
      "mode": "subagent",
      "temperature": 0.3,
      "maxSteps": 20,
      "prompt": "{file:prompts/document-writer.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": false,
        "webfetch": false
      },
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },

    "reviewer": {
      "description": "Code quality reviewer. Identifies bugs, anti-patterns, edge cases. Can spawn Security Advisor.",
      "model": "opencode/claude-sonnet-4-5",
      "mode": "subagent",
      "temperature": 0.2,
      "maxSteps": 20,
      "reasoningEffort": "high",
      "prompt": "{file:prompts/reviewer.md}",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": true,
        "webfetch": false,
        "grep": true,
        "glob": true,
        "list": true,
        "lsp": true,
        "question": true
      },
      "permission": {
        "bash": "ask",
        "task": {
          "*": "deny",
          "security-advisor": "allow"
        }
      }
    },

    "security-advisor": {
      "description": "Security specialist. OWASP Top 10 review, vulnerability identification, remediation guidance.",
      "model": "opencode/claude-opus-4-5",
      "mode": "subagent",
      "temperature": 0.2,
      "maxSteps": 25,
      "reasoningEffort": "high",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 16000
      },
      "prompt": "{file:prompts/security-advisor.md}",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": true,
        "webfetch": false,
        "grep": true,
        "glob": true,
        "list": true
      },
      "permission": {
        "bash": "ask",
        "task": {
          "*": "deny"
        }
      }
    },

    "testing-specialist": {
      "description": "Testing expert. Test strategy design, unit/integration/E2E test implementation, coverage analysis.",
      "model": "opencode/gpt-5.1-codex",
      "mode": "subagent",
      "temperature": 0.3,
      "maxSteps": 25,
      "prompt": "{file:prompts/testing-specialist.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": false,
        "todowrite": true,
        "todoread": true,
        "lsp": true
      },
      "permission": {
        "bash": "ask",
        "task": {
          "*": "deny"
        }
      }
    }
  }
}
